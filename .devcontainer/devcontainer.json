{
  "name": "Solution Developer Container",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:0-18",
  "features": {
    "ghcr.io/devcontainers/features/azure-cli:1": {
      "installBicep": true
    },
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/dotnet:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "hostRequirements": {
    "cpus": 4,
    "memory": "8gb",
    "storage": "32gb"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "EditorConfig.EditorConfig",
        "dbaeumer.vscode-eslint"
      ]
    },
    "codespaces": {
      "repositories": {
        "thcare/web.th.care": {
          "permissions": {
            "contents": "read",
            "packages": "read"
          }
        },
        "thcare/api.th.care": {
          "permissions": {
            "contents": "read",
            "packages": "read"
          }
        },
        "thcare/dev.th.care": {
          "permissions": {
            "packages": "read"
          }
        },
        "thcare/deploy.th.care": {
          "permissions": {
            "packages": "read"
          }
        }
      }
    }
  }
}
