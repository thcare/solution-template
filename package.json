{
  "name": "@thcare/solution",
  "version": "1.0.0",
  "description": "Solution Template Repository",
  "type": "module",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "scripts": {
    "build": "wireit",
    "start": "wireit",
    "dev": "wireit",
    "workbench": "npm run dev --watch",
    "open-browser": "[ \"${GITHUB_CODESPACES_PORT_FORWARDING_DOMAIN}\" ] && ( sensible-browser \"https://${CODESPACE_NAME}-3000.${GITHUB_CODESPACES_PORT_FORWARDING_DOMAIN}/\" ) || ( sensible-browser http://localhost:3000)"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build/prisma",
        "build/graphql",
        "build/tsc",
        "build/compile"
      ]
    },
    "build/prisma": {
      "command": "thfx prisma",
      "files": [
        "prisma/solution.prisma"
      ],
      "output": [
        "prisma/schema.prisma",
        "schema.gql"
      ]
    },
    "build/graphql": {
      "command": "graphql-codegen",
      "files": [
        "codegen.yml",
        "schema.gql"
      ],
      "dependencies": [
        "build/prisma"
      ]
    },
    "build/tsc": {
      "command": "tsc --build",
      "clean": "if-file-deleted",
      "files": [
        "src/**/*.{ts,tsx}",
        "tsconfig.json"
      ],
      "output": [
        "dist/**",
        ".tsbuildinfo"
      ],
      "dependencies": [
        "build/prisma",
        "build/graphql"
      ]
    },
    "build/compile": {
      "command": "node dist/scripts/compile.js",
      "dependencies": [
        "build/tsc"
      ]
    },
    "start": {
      "command": "func start",
      "service": true,
      "files": [
        "local.settings.json"
      ],
      "dependencies": [
        {
          "script": "build",
          "cascade": false
        }
      ]
    },
    "dev": {
      "command": "thfx solution:dev",
      "service": true,
      "dependencies": [
        "build",
        "start"
      ]
    }
  },
  "files": [
    "dist",
    "prisma",
    "Fn*/**",
    "host.json",
    "local.settings.json",
    ".funcignore",
    "npm-shrinkwrap.json"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thcare/solution-template.git"
  },
  "author": "Thrive Health",
  "license": "SEE LICENSE IN LICENSE.md",
  "bugs": {
    "url": "https://github.com/thcare/solution-template/issues"
  },
  "homepage": "https://github.com/thcare/solution-template#readme",
  "devDependencies": {
    "@azure/functions": "^3.5.1",
    "@graphql-codegen/cli": "^4.0.0",
    "@graphql-codegen/client-preset": "^4.0.0",
    "@thcare/thcarefx": "^7.3.2",
    "@types/node": "^20.2.3",
    "@types/react": "18.0.33",
    "azure-functions-core-tools": "^4.0.5198",
    "husky": "^8.0.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "npm-run-all": "^4.1.5",
    "pretty-quick": "^3.1.3",
    "typegraphql-prisma": "^0.25.1",
    "typescript": "^5.0.4",
    "urql": "^4.0.2",
    "wireit": "^0.9.5"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "restricted",
    "tag": "latest"
  },
  "peerDependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "urql": "^4.0.2"
  },
  "dependencies": {
    "graphql-request": "^6.1.0"
  }
}
