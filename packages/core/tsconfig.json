{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "rootDir": ".",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "schema/**/*"
  ]
}
